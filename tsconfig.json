{
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": "src",
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "@/app/*": ["app/*"],
            "@/entities/*": ["entities/*"],
            "@/features/*": ["features/*"],
            "@/pages/*": ["pages/*"],
            "@/shared/*": ["shared/*"],
            "@/widgets/*": ["widgets/*"]
        }
    },
    "include": ["src/**/*"]
}
